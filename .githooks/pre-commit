#!/bin/sh
# Pre-commit hook to run TypeScript type checking

echo "🔍 Running TypeScript type check..."

cd frontend
npm run typecheck

if [ $? -ne 0 ]; then
  echo ""
  echo "❌ Type check failed! Fix TypeScript errors before committing."
  echo "💡 Run 'npm run typecheck' in the frontend directory to see errors."
  echo ""
  exit 1
fi

echo "✅ Type check passed!"
exit 0
