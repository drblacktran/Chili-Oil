#!/bin/sh
# Pre-commit hook to run TypeScript type checking

echo "ğŸ” Running TypeScript type check..."

cd frontend
npm run typecheck

if [ $? -ne 0 ]; then
  echo ""
  echo "âŒ Type check failed! Fix TypeScript errors before committing."
  echo "ğŸ’¡ Run 'npm run typecheck' in the frontend directory to see errors."
  echo ""
  exit 1
fi

echo "âœ… Type check passed!"
exit 0
